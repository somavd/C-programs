/*
	Chain of Pointers
*/

#include"lib.c"
void main()
{
int i,*p,**q,***r;
p=&i;    //p points to i
q=&p;    // q points to p
r=&q;    //r points to q        ie. "r -> q -> p -> i"

//Using i
printf("\nEnter any number");
scanf("%d",&i);
printf("%d",i);

//Using p
printf("\nEnter any number");
scanf("%d",p);
printf("%d",*p);

//Using q
printf("\nEnter any number");
scanf("%d",*q);
printf("%d",**q);

//Using r
printf("\nEnter any number");
scanf("%d",**r);
printf("%d",***r);

printf("\nEnter any key to exit");
getch();
}